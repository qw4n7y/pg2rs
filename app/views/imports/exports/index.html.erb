<%= render partial: 'imports/imports/header', locals: {import: @import} %>

<div class='row'>
  <div class='col-md-8'>
    <h3>Exports</h3>
  </div>
  <div class="col-md-4">
    <%= link_to [:new, @import, :export], class: 'pull-right btn btn-default btn-success' do %>
      <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
      &nbsp;New Export
    <% end %>
  </div>
</div>

<table class='table'>
  <thead>
    <tr>
      <th>#</th>
      <th>Status</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <%= render @exports, as: :export %>
  </tbody>
</table>

<br>
