<tr class="<%= bootstrap_row_class_for_status export.status %>">
  <td><%= export.id %></td>
  <td><%= export.status %></td>

  <td>
    <% unless export.started? %>
      <%= link_to start_imports_import_export_path(export.import, export), method: :post, class: 'btn btn-xs btn-default btn-success' do %>
        <span class="glyphicon glyphicon-refresh" aria-hidden="true"></span>
      <% end %>
    <% end %>
    <%= link_to imports_import_export_path(export.import, export), class: 'btn btn-xs btn-default' do %>
      <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
    <% end %>
    <%= link_to edit_imports_import_export_path(export.import, export), class: 'btn btn-xs btn-default' do %>
      <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
    <% end %>
    <%= link_to imports_import_export_path(export.import, export), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-xs btn-default' do %>
      <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
    <% end %>
  </td>
</tr>
