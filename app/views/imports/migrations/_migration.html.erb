<tr class="<%= bootstrap_row_class_for_status migration.status %>">
  <td><%= migration.id %></td>
  <td><%= raw truncate(migration.sql, length: 50) %></td>
  <td><%= migration.status %></td>

  <td>
    <% unless migration.started? %>
      <%= link_to start_imports_import_migration_path(migration.import, migration), method: :post, class: 'btn btn-xs btn-default btn-success' do %>
        <span class="glyphicon glyphicon-refresh" aria-hidden="true"></span>
      <% end %>
    <% end %>
    <%= link_to imports_import_migration_path(migration.import, migration), class: 'btn btn-xs btn-default' do %>
      <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
    <% end %>
    <%= link_to edit_imports_import_migration_path(migration.import, migration), class: 'btn btn-xs btn-default' do %>
      <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
    <% end %>
    <%= link_to imports_import_migration_path(migration.import, migration), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-xs btn-default' do %>
      <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
    <% end %>
  </td>
</tr>
