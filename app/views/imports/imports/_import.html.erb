<tr>
  <td><%= import.title %></td>
  <td><%= import.status %></td>
  <td><%= import.tables.count %> tables</td>

  <% if transfer = import.transfers.order(id: :desc).first %>
    <td class='<%= bootstrap_row_class_for_status transfer.status %>'>
        <%= transfer.created_at %> / <%= transfer.status %>
    </td>
  <% else %>
    <td>Never</td>
  <% end %>

  <td>
    <%= link_to import, class: 'btn btn-xs btn-default' do %>
      <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
    <% end %>
    <%= link_to edit_imports_import_path(import), class: 'btn btn-xs btn-default' do %>
      <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
    <% end %>
    <%= link_to import, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-xs btn-default' do %>
      <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
    <% end %>
  </td>
</tr>
