<tr>
  <td><%= import.title %></td>
  <td><%= import.status %></td>
  <td><%= import.tables.count %> tables</td>
  <td>
    <% if transfer = import.transfers.first %>
      <%= transfer.created_at %> / <%= transfer.status %>
    <% else %>
      Never
    <% end %>
  </td>
  <td>
    <%= link_to import, class: 'btn btn-xs btn-default' do %>
      <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
    <% end %>
    <%= link_to edit_imports_import_path(import), class: 'btn btn-xs btn-default' do %>
      <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
    <% end %>
    <%= link_to import, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-xs btn-default' do %>
      <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
    <% end %>
  </td>
</tr>
